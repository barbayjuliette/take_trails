<%# search form %>
<%= form_with url: trails_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a trail"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<%# list of trail details - to be deleted when jul adds hers in %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <div id="trails">
        <% @trails.each do |trail| %>
          <h4><%= trail.name %></h4>
          <p><%= trail.distance %></p>
          <p><%= trail.difficulty %></p>
          <p><%= trail.description %></p>
          <p><%= trail.duration %></p>
          <p><%= trail.location %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
