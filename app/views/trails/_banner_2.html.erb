<style>

  .banner-wrapper {
    height: 100vh;
    position: relative;
    background-repeat: no-repeat;
    background-size: 100% 100%;
    background-attachment: fixed;
    position:fixed;
    top: 0;
    left: 0;
    width: 100%;
  }

  .banner-wrapper .thumbnails {
    position: absolute;
    right: 0;
    max-width: 50%;
    height:100%;
    background: linear-gradient(to left, rgba(0,0,0,1), rgba(0,0,0,0));
    text-align:right;
  }

  .banner-wrapper .thumbnails img {
    width:200px;
    height:100px;
    margin: 1rem;
    display: block;
  }

  main{
    margin-left: 200px;
    margin-right: 200px;
    margin-top: 60vh;
    border-top-left-radius: 15px;
    border-top-right-radius: 15px;
    padding: 1rem;
    background-color: white;
    position: relative
  }

</style>

<div class="banner-wrapper" style="background-image: url(<%= cl_image_path trail.photos.first.key %>)">
  <div class="thumbnails">
  <% trail.photos.each_with_index do |image, index| %>
    <%= cl_image_tag(image.key, class: "thumbnail #{'active' if index.zero?}") if image.key? %>
  <% end %>
  </div>
</div>
