
<div class="userlogin">
  <div class="log-in">
    <div class="form-text">
      <h2 class="text-left">Login</h2>
      <%# <h6 class="login-text">Enter your login details below.</h6> %>
    </div>


    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
      <div class="form-inputs form-floating">
        <%= f.input :email,
                    required: false,
                    label: false,
                    autofocus: true,
                    placeholder: "Email",
                    input_html: { autocomplete: "email", class: "devise-label d-flex" }%>
        <%= f.input :password,
                    required: false,
                    label: false,
                    placeholder: "Password",
                    input_html: { autocomplete: "current-password", class: "devise-label" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?%>
        <%= f.button :submit, "LOG IN", class: "trail-btn" %>


        <button type="button" class="btn link" data-bs-toggle="modal" data-bs-target="#passwordModal">
          Forgot your password?
        </button>

      </div>
    <% end %>
    </div>



  <div class="log-in">
    <div class="form-text">
      <h2 class="text-left">Create account</h2>
      <%# <h6 class="login-text">Create account to plan your trail</h6> %>
    </div>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
  <%= f.error_notification %>
      <div class="form-inputs form-floating">
        <%= f.input :first_name,
                    required: true,
                    autofocus: true,
                    label: false,
                    placeholder: "First name*",
                    input_html: { autocomplete: "first-name", class: "devise-label d-flex"} %>
        <%= f.input :last_name,
                    required: true,
                    autofocus: true,
                    label: false,
                    placeholder: "Last name*",
                    input_html: { autocomplete: "last-name", class: "devise-label" } %>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: false,
                    placeholder: "Email*",
                    input_html: { autocomplete: "email", class: "devise-label" }%>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    label: false,
                    placeholder: "Password*",
                    input_html: { autocomplete: "new-password", class: "devise-label" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    label: false,
                    placeholder: "Confirm password*",
                    input_html: { autocomplete: "new-password", class: "devise-label" } %>

        <%= f.button :submit, "CREATE ACCOUNT ", class: "trail-btn" %>
      </div>
  </div>
  <% end %>


</div>
</div>

</div>
