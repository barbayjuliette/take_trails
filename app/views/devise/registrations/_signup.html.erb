<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvassignup" aria-labelledby="offcanvassignupLabel">
  <div class="offcanvas-header">

    <button type="button" class="close" data-bs-dismiss="offcanvas" aria-label="Close"><i class="fa-solid fa-xmark"></i></button>
  </div>
  <div class="offcanvas-body">

<div class="form-container">
  <h2 class="text-center">Make an account</h2>
  <h6 class="login-text">Create account to plan your trail</h6>
</div>


<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo: false}) do |f| %>
  <div class="form-inputs form-floating">
    <%= f.input :first_name,
                required: true,
                autofocus: true,
                label: false,
                placeholder: "FIRST NAME*",
                input_html: { autocomplete: "first-name", class: "devise-label d-flex"} %>
    <%= f.input :last_name,
                required: true,
                autofocus: true,
                label: false,
                placeholder: "LAST NAME*",
                input_html: { autocomplete: "last-name", class: "devise-label" } %>
    <%= f.input :email,
                required: true,
                autofocus: true,
                label: false,
                placeholder: "EMAIL*",
                input_html: { autocomplete: "email", class: "devise-label" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                label: false,
                placeholder: "PASSWORD*",
                input_html: { autocomplete: "new-password", class: "devise-label" } %>
    <%= f.input :password_confirmation,
                required: true,
                label: false,
                placeholder: "CONFIRM PASSWORD*",
                input_html: { autocomplete: "new-password", class: "devise-label" } %>

    <%= f.button :submit, "SIGN IN ", class: "trail-btn" %>

  </div>


<% end %>

<div class="text-input-label devise-links">
   <%= render "devise/shared/links" %>
</div>

  </div>
</div>
