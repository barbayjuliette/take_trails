


<!-- Modal -->
<div class="modal fade rounded-2" id="leavereview" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable rounded-2">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title " id="staticBackdropLabel"></h1>
        <button type="button" class="btn-close border-bottom-0" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <h2><strong>Leave a review</strong></h2>
          <%# Ajax %>
        <div class="review-form">
 <%= simple_form_for([@trip, @review], data: {insert_in_list_target: "form", action: "submit->insert-in-list#send"}) do |f| %>

  <%= f.input :comment,
              required: true,
              autofocus: true,
              label: false,
              placeholder: "COMMENT",
              input_html: { class: "review-label"} %>
  <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience", input_html: {data: {controller: "star-rating"}} %>
  <%= f.button :submit, "SUBMIT REVIEW", class: "login-btn" %>
<% end %>
</div>


        <br><br>
        <h2><strong>Reviews</strong></h2>
<ul class="list-group">
  <% @trip.reviews.each do |review| %>
  <%# Ajax %>

  <div data-insert-in-list-target="items">

  <div class="review">
    <div class="user-info">
      <i class="fa-solid fa-circle-user avatar"></i>
      <div>
      <h4><%= review.user.first_name %> <%= review.user.last_name %></h4>
      <p><%= review.user.created_at.to_s.split(" ").first %> </p>
      </div>
      </div>
    <li class="list-group-item reviews"><%= review.comment %></li>
    </div>
  <% end %>
</ul>
<br>
      </div>
    </div>
  </div>
