

<%# REVIEW FORM %>
  <div class="review-form">
    <%= simple_form_for([@trip, @review], data: {insert_in_list_target: "form", action: "submit->insert-in-list#send"}) do |f| %>
      <%= f.input :comment,
                  required: true,
                  autofocus: true,
                  label: false,
                  placeholder: "COMMENT",
                  input_html: { class: "review-label"} %>
      <%= f.association :categories,
                  input_html: {multiple: true, data: {controller: "tom-select", tom_select_options_value: {tag: true}}} %>
      <%= f.input :rating,
                  label: false,
                  collection: (1..5).to_a, input_html: {data: {controller: "star-rating"}} %>
      <%= f.button :submit, "SUBMIT REVIEW", class: "login-btn" %>
    <% end %>
  <%# END OF REVIEW FORM %>
  </div>
