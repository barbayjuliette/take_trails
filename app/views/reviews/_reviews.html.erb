  <h4 data-insert-in-list-target="blank">
    <% if @trip.trail.reviews.blank? %>
        No reviews yet. Be the first to leave a review for <%= @trip.trail.name %>
    <% end %>
  </h4>


  <% @trip.trail.reviews.reverse_each do |review| %>
    <div class="review">
      <div class="user-info">
        <i class="fa-solid fa-circle-user avatar"></i>
        <div>
          <h4><%= review.user.first_name %> <%= review.user.last_name %></h4>
          <p><%= review.user.created_at.to_s.split(" ").first %> </p>
        </div>
        <div class="rating">
          <h5><%= review.rating %><i class="fa-solid fa-star"></i> </h5>
        </div>
      </div>
    <div class="reviews review-size">
    <% review.categories.each do |category| %>
      <span class="tag bg-info rounded-pill px-2 py-1 me-2 mb-2"><%= category.name %></span >
    <% end %>
    <div class="mt-1">
      <%= review.comment %>
    </div>
    </div>
  </div>
<% end %>
